import numpy as np
import matplotlib.pyplot as plt
from pid_controller import PIDController
from hinf_controller import HinfController

## ğŸ”§ ã‚»ãƒ«â‘¡ï¼šã‚·ãƒŸãƒ¥ãƒ¬ãƒ¼ã‚·ãƒ§ãƒ³æ¡ä»¶ã®è¨­å®š
t = np.linspace(0, 10, 1000)          # æ™‚é–“è»¸
ref = np.ones_like(t) * 1.0           # ç›®æ¨™å€¤ï¼ˆã‚¹ãƒ†ãƒƒãƒ—å…¥åŠ›ï¼‰

## ğŸ”§ ã‚»ãƒ«â‘¢ï¼šPIDåˆ¶å¾¡å¿œç­”ã®ç¢ºèª
pid = PIDController(Kp=2.0, Ki=1.0, Kd=0.5)
y_pid = []        # å‡ºåŠ›è¨˜éŒ²
u_pid = []        # åˆ¶å¾¡å…¥åŠ›è¨˜éŒ²
prev_error = 0.0

for i in range(len(t)):
    error = ref[i] - (y_pid[-1] if y_pid else 0)
    control = pid.update(error)
    output = control * 0.9  # ä»®ã®å¿œç­”ãƒ¢ãƒ‡ãƒ«
    y_pid.append(output)
    u_pid.append(control)

plt.plot(t, y_pid, label='PID Output')
plt.title('PID Response')
plt.xlabel('Time [s]')
plt.ylabel('Output')
plt.legend()
plt.grid()
plt.show()

## ğŸ”§ ã‚»ãƒ«â‘£ï¼šHâˆå¿œç­”ï¼ˆLTIãƒ¢ãƒ‡ãƒ«ä¾‹ï¼‰
A = np.array([[0.0, 1.0], [-2.0, -3.0]])
